# YTreeView.mag - Hierarchical tree widget

YTreeView subclass: YWidget

  method: setRoot: text [
      ^handle primTreeSetRoot: text
  ]

  method: selected [
      ^handle primTreeGetSelected
  ]

  method: selectedText [
      | info |
      info := self selected.
      info ifNil: [^nil].
      ^info at: #text
  ]

  method: selectedReference [
      | info |
      info := self selected.
      info ifNil: [^nil].
      ^info at: #reference
  ]
